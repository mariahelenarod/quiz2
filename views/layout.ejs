					<button type="submit" class="btn btn-default" value="Enviar">Submit</button>
				</form>
				<ul class="nav navbar-nav navbar-right">
					<div class="form-group" style="color: white">
						<%if(!session.user){%>
							<li><a href="/user">Sign up</a> - <a href="/login">Login</a></li>
						<%}else{%>
							<li><%=session.user.username%> - <a href="/user/<%=session.user.id%>/edit">Settings</a> - <a href="/logout">Logout </a></li>
						<%}%>
					</div>
				</ul>
			</div><!-- /.navbar-collapse -->
		</div><!-- /.container-fluid -->
