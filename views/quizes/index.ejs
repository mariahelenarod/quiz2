
	<% var i; for (i=0; i < quizes.length; i++) { %>
		<ul class="list-group">
		<div class="list-group-item">
		
			<form class="form-inline">
		
			<a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a>
			<% if (session.user) { %>
				
				<a href="quizes/<%= quizes[i].id %>/edit"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
				
				
					<form method="post" action="/quizes/<%= quizes[i].id %>?_method=delete">									<!- @override ->
					
						<button class="btn btn-danger btn-sm" type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">
							<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
						</button>
					
					</form>
				
			<% } %>
			
			</form>
			
		</div>
		</ul>
	<% } %>
	
	
		<div class="panel panel-default">
			<div class="panel-heading">Panel</div>
			
				<table class="table">
					
					<thead>
						<tr>
							<th>Tema</th>
							<th>Pregunta</th>
						</tr>
					</thead>
					<% var i; for (i=0; i < quizes.length; i++) { %>
						<tbody>
							<a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a>
							<% if (session.user) { %>
								
								<a href="quizes/<%= quizes[i].id %>/edit"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
								
								
									<form method="post" action="/quizes/<%= quizes[i].id %>?_method=delete">									<!- @override ->
									
										<button class="btn btn-danger btn-sm" type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">
											<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
										</button>
									
									</form>
								
							<% } %>
						</tbody>
					<% } %>
				</table>
				
			
		</div>
	


