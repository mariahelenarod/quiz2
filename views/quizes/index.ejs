
	<% var i; for (i=0; i < quizes.length; i++) { %>
		<ul class="list-group">
		<div class="list-group-item">
		
			<form class="form-inline">
		
			<a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a>
			<% if (session.user) { %>
				
				<a href="quizes/<%= quizes[i].id %>/edit"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
				
				
					<form method="post" action="/quizes/<%= quizes[i].id %>?_method=delete">									<!- @override ->
					
						<button class="btn btn-danger btn-sm" type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">
							<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
						</button>
					
					</form>
				
			<% } %>
			
			</form>
			
		</div>
		</ul>
	<% } %>
	
	
	<div class="panel panel-default table-responsive">
  <table class="table">
  	<thead>
      <tr>
        <th>Tema</th>
        <th>Pregunta</th>
      </tr>
    </thead>
    <tbody>
	<% var i; for (i=0; i < quizes.length; i++) { %>
		<tr>
			<td><a name="<%= quizes[i].tema %>" href="temas/<%= quizes[i].tema %>"><%= quizes[i].tema %> </a></td>
			<td><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %> </a></td>
			<% if(session.user){%>
				<td><a href="quizes/<%= quizes[i].id %>/edit"><button>editar</button></a></td>
				<td>
				 	<form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
				 		<button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">borrar</button>
				 	</form>
				</td>
 			<%}%>
		</tr>
	<% } %>
  </table>
</div>
<br>
	


