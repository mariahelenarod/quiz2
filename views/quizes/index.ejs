<table>
	<% var i; for (i=0; i < quizes.length; i++) { %>
		<tr>
			<td><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></td>
			<% if (session.user) { %>		
				<td><a href="quizes/<%= quizes[i].id %>/edit"><button>editar</button></a></td>
				<td>
					<form method="post" action="/quizes/<%= quizes[i].id %>?_method=delete">									<!- @override ->
						<button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">borrar</button>
					</form>
				</td>
			<% } %>
		</tr>
	<% } %>
</table>

<form method="get" action="/quizes">									<!- formulario para pedir quÃ© se va a buscar de la lista de preguntas (name=search) ->
    <input type="text" name="search" value="search" />
    <input type="submit" value="Enviar">
</form>
