<div class="form-group">	
	<label for="preg" class="col-sm-2 control-label">Pregunta:</label>
	<div class="col-sm-10">
		<input type="text" class="form-control" id="preg" name="quiz[pregunta]" value="<%= quiz.pregunta %>"/>
	</div>
</div>

<div class="form-group">	
	<label for="resp" class="col-sm-2 control-label">Respuesta:</label>
	<div class="col-sm-10">
		<input type="text" class="form-control" id="resp" name="quiz[respuesta]" value="<%= quiz.respuesta %>"/>
	</div>
</div>

<div class="form-group">
	<label for="image" class="col-sm-2 control-label">Imagen:</label>
	<div class="col-sm-10">
		<input type="file" accept="image/*" class="form-control" id="image" name="image"/>
	</div>
</div>


<div class="form-group">	
	<label for="preg" class="col-sm-2 control-label">Tema:</label>
	<div class="col-sm-10">
		<select id="tema" name="quiz[tema]">
			<option value="otro" <%if (quiz.tema==="otro"){%> selected <%}%>>Otro</option>
			<option value="humanidades" <%if (quiz.tema==="humanidades"){%> selected <%}%>>Humanidades</option>
			<option value="ocio" <%if (quiz.tema==="ocio"){%> selected <%}%>>Ocio</option>
			<option value="ciencia" <%if (quiz.tema==="ciencia"){%> selected <%}%>>Ciencia</option>
			<option value="tecnologia" <%if (quiz.tema==="tecnologia"){%> selected <%}%>>Tecnologia</option>
			<option value="geografia" <%if (quiz.tema==="geografia"){%> selected <%}%>>Geograf√≠a</option>
		</select>
	</div>
</div>
	
<div class="form-group">
	<div class="col-sm-offset-2 col-sm-10">
		<a href="/quizes"><button type="button">Cancelar</button></a>
		<input type="submit" value="Salvar">
	</div>
</div>
	







