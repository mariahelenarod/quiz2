<form method="get" action="/quizes/<%= quiz.id %>/answer">                         	<!- cuando submit, llama a export.answer del quiz_controller.js ->
	<p>Pregunta: <%= quiz.pregunta %> </p>
	<input type="text" name="respuesta" value="Responda aquÃ­"/>						<!- se genera la variable respuesta para enviar en GET req ->
	<input type="submit" value="Enviar">
</form>

<p><a href="/quizes/<%= quiz.id %>/comments/new"><button>Nuevo comentario</button></a></p>

<p><strong>Comentarios:</strong></p>
	
		
<%for(index in quiz.comment){%>
	<%if(quiz.comment[index].publicado){%>
		<p>- <%=quiz.comment[index].texto%></p>
	<%} else if(session.user && (session.user.isAdmin || (session.user && quiz.userId === session.user.id))){%>
			<p>- <%=quiz.comment[index].texto%>
			<a href="/quizes/<%= quiz.id %>/comments/<%=quiz.comment[index].id%>/publish"><button>Publicar</button></a></p>
	<%}%>
<%}%>


